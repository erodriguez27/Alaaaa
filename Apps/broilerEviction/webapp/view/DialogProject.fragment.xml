<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<Dialog title="Agregar nueva Semana"
			class="sapUiPopupWithPadding"
			confirm="onCancelCopy"
			cancel="onCancelCopy"
			busy="false">

			<f:SimpleForm
						id="formProjected"
						editable="true"
						labelSpanL="5"
						labelSpanM="4" 
						labelSpanS="4"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsL="2"
		        columnsM="2"
						maxContainerCols="2"
						layout="ResponsiveGridLayout"
						width="100%"
						busy="false">

						<Label text="Fecha"/>
						<DatePicker id="projected_date" valueFormat="dd-MM-yyyy" value="" change="handleChange"/>

						<Label text="Cantidad"/>
						<Input id="projected_quantity" value="" placeholder="Pollos" />

						<Label text="Linea"/>
						<Select 
										selectedKey="Cobb"
										id="breedSelect">
							<core:Item text="Cobb" key="2"/>
						</Select>


					</f:SimpleForm>
					<beginButton>
						<Button text="Guardar" type="Accept" press="onProjectedSaveDialog" />
					</beginButton>
					<endButton>
						<Button text="Cancelar" type="Reject" press="onProyectedCloseDialog" />
					</endButton>

	</Dialog>
</core:FragmentDefinition>