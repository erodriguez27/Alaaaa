<mvc:View xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:html="http://www.w3.org/1999/xhtml" 
    controllerName="userManagement.controller.Add_rol">

    <Page title="{i18n>appTitlerol}" showNavButton="true" navButtonPress="onPressReject">
        <VBox class="sapUiSmallMargin" id="centerFormVBox">
            <sap.ui.layout.form:SimpleForm
                xmlns:sap.ui.layout.form="sap.ui.layout.form"
                title="{i18n>add_rol}"
                editable="true"
                layout="ResponsiveGridLayout"
                id="centerForm"
                minWidth="1024"
                maxContainerCols="2"
                labelSpanL="3"
                labelSpanM="3"
                emptySpanL="4"
                emptySpanM="4"
                columnsL="1"
                columnsM="1"
                class="editableForm">

                <sap.ui.layout.form:content>
                    <Label text="{i18n>rol_name}"/>
                    <Input id="userrol"
                        type="Text"
                        liveChange="clearStatusFieldRole"/>
                                           
                    <Label text="{i18n>app_assign}"/>
                        <MultiComboBox
                            selectionChange="clearStatusFieldRole"
                            selectionFinish="handleSelectionFinish"
                            width="500px"
                            items="{data>/apps}"
                            id="aplicaciones">
                            <core:Item key="{data>application_id}" text="{path:'data>application_name', formatter: '.formatter.formatApps'}" />
                        </MultiComboBox>



                </sap.ui.layout.form:content>
            </sap.ui.layout.form:SimpleForm>
        </VBox>
        <footer>
            <Bar>
                <contentLeft>
                    
                </contentLeft>
                <contentRight>
                    <Button
                        text="{i18n>accept}"
                        press="onPressAccept"
                        type="Accept"/>

                    <Button
                        text="{i18n>reject}"
                        press="onPressReject"
                        type="Reject"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
