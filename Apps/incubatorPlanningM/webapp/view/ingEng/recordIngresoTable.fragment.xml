<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
<Table id="RecordIngresosTable"
          inset="false"
          items="{path:'mdegresoIngresoAjustes>/RecordIngresos'}"
          growing="true"
        	growingScrollToLoad="true">

 <columns>
      <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
        <Text text="{i18n>lot}"/>
      </Column>
      <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
        <Text text="{i18n>date}"/>
      </Column>
         <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
        <Text text="{i18n>quantityEggsProy}"/>
      </Column>
      <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
        <Text text="{i18n>quantityEggs}"/>
      </Column>
</columns>       

<items>
      <ColumnListItem>
        <cells>
            <Text text="{mdegresoIngresoAjustes>lot}"/>
            <Text text="{mdegresoIngresoAjustes>fecha_movements}"/>
            <Text text="{mdegresoIngresoAjustes>eggs_executed}"/>
            <Text text="{mdegresoIngresoAjustes>quantity}"/>
        </cells>
      </ColumnListItem>
</items>

</Table>
</core:FragmentDefinition>