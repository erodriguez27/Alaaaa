        <Text text="Fecha"/>
      </Column>
      <Column hAlign="Center">
        <Text text="Lote"/>
      </Column>
      <Column hAlign="Center">
        <Text text="Cantidad"/>
      </Column>
      <Column hAlign="Center">
        <Text text="DescripciÃ³n"/>
      </Column>
    </columns>
    <items>
      <ColumnListItem>
        <cells>
          <Text text="{mdinventory>date}"/>
          <Text text="{mdinventory>lot}"/>
          <Text text="{mdinventory>quantity}"/>
          <Text text="{mdinventory>description_adjustment}"/>
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</Popover>
</core:FragmentDefinition>
