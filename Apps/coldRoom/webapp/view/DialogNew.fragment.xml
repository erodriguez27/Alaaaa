			<Select id="descriptionNewSelect" items="{path:'mdinventory>/new'}" selectedKey="{Nose>/x}">
				<core:Item text="{mdinventory>name}" key="{mdinventory>name}"/>
			</Select>
		</f:SimpleForm>
		<beginButton>
			<Button text="Guardar" type="Accept" press="onSaveNewIngress" />
		</beginButton>
		<endButton>
