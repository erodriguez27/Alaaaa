			<Label text="Raza"/>
			<Select id="breedNewSelect" items="{path:'mdbreed>/records'}" selectedKey="{mdbreed>/selectedKey}">
				<core:Item text="{mdbreed>name}" key="{mdbreed>breed_id}"/>
			</Select>

