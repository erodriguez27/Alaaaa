<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="Granjas Reproductora"
		placement="Bottom">
		<content>
			<List
				mode="SingleSelectMaster"
				includeItemInSelection="true"
				select="handleItemSelect"
				items="{mdfarms>/records}">
				<StandardListItem title="{mdfarms>name}" />
			</List>
		</content>
	</Popover>
</core:FragmentDefinition>