<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="technicalConfiguration.controller.mdbreed">
	<App>
		<pages>
			<sap.m.semantic:DetailPage busy="{util>/busy}" xmlns:sap.m.semantic="sap.m.semantic" title="{i18n>OS.entity.details}" id="breedPage" showNavButton="{util>/phone}" navButtonPress="onNavMaster">
				<sap.m.semantic:content>
					<ObjectHeader title="{i18n>breed.entityName}" numberUnit="{i18n>records}" id="breedHeader" backgroundDesign="Solid" responsive="true"/>
					<VBox xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" width="100%" direction="Column" id="breedVBox">
						<items>
							<Toolbar xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" id="breedToolbar">
								<content>
									<SearchField id="broilerProductSearchField" liveChange="onbroilerProductSearch" placeholder="{i18n>OS.searchRecord}" width="100%"/>
								</content>
							</Toolbar>
							<Table
								xmlns:core="sap.ui.core"
								xmlns:mvc="sap.ui.core.mvc"
								xmlns:html="http://www.w3.org/1999/xhtml"
								xmlns:sap.m.semantic="sap.m.semantic"
								xmlns="sap.m"
								noDataText="{i18n>noRecords}"
								id="brredTable"
								items="{MDBREED>/records/}"
								mode="None"
								growing="true"
        						growingScrollToLoad="true">
								<items>
									<ColumnListItem counter="0" id="breed_list_item" type="DetailAndActive" detailPress="onViewBreedRecord">
										<cells>
											<Text text="{MDBREED>name}" maxLines="0" id="breed_name_text"/>
										</cells>
									</ColumnListItem>
								</items>
								<columns>
									<Column id="breed_name_column" vAlign="Middle" width="30%">
										<header>
											<Label text="{i18n>broilerProduct.name}" id="breed_table_name_label"/>
										</header>
									</Column>
								</columns>
							</Table>
						</items>
					</VBox>
				</sap.m.semantic:content>
				<sap.m.semantic:customFooterContent>
					<Button text="{i18n>new}" width="100px" id="newBtn" type="Accept" visible="{MDBROILERPRODUCT>/new}" press="onNewRecord"/>
				</sap.m.semantic:customFooterContent>
			</sap.m.semantic:DetailPage>
		</pages>
	</App>
</mvc:View>
